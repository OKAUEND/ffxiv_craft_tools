{
    "compilerOptions": {
    // これは Vue のブラウザサポートに合わせます
    "target": "es6",
    "strict": true,
    "module": "es2015",
    "moduleResolution": "node",
    "baseUrl": ".",
    "jsx": "preserve",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "experimentalDecorators": true
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "src/**/*.js",
        "tests/**/*.ts",
        "tests/**/*.tsx"
    ],
    "paths": {
        "@/*": ["src/*"]
    }
}
